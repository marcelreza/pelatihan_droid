<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receipt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="marcel.reza.shopreceipt.Main2Activity">

    <TableRow>
        <TextView
            android:text="TV" />
        <TextView
            android:id="@+id/tv2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/tv2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Kipas" />
        <TextView
            android:id="@+id/kipas2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/kipas2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Vacum" />
        <TextView
            android:id="@+id/vacum2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/vacum2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="AC" />
        <TextView
            android:id="@+id/ac2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/ac2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="CCTV" />
        <TextView
            android:id="@+id/cctv2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/cctv2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="DVD Player" />
        <TextView
            android:id="@+id/dvd2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/dvd2_total"
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:text="5000000"/>
    </TableRow>
    <TableRow
        android:background="@color/coba"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Total Pembelian"
            android:layout_span="2"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grand_total"
            android:width="100dp"
            android:gravity="right"
            android:text="5000000"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </TableRow>

</TableLayout>
